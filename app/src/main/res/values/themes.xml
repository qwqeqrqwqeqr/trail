<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="sub.theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@android:color/white</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="splash.theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="main.theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBackgroundColor</item>
        <item name="colorPrimaryVariant">@color/primaryBackgroundColor</item>
        <item name="colorOnPrimary">@color/primaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/primaryBackgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/primaryBackgroundColor</item>
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/primaryBackgroundColor</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="race.theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBackgroundColor</item>
        <item name="colorPrimaryVariant">@color/primaryBackgroundColor</item>
        <item name="colorOnPrimary">@color/primaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/primaryBackgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/primaryBackgroundColor</item>

        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/secondaryBackgroundColor</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--    Chip-->


    <!--        bottomSheet theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_layout_radius</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_layout_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <!--    material alert-->

    <style name="MaterialAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/secondaryBackgroundColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogBody</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialogButton</item>
    </style>

    <style name="MaterialAlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialogBody" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.MyApp.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
       <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnSurface">@color/hintColor</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="chipBackgroundColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>

    </style>


</resources>